{
  "name": "@eshop/source",
  "version": "0.0.0",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "scripts": {
    "build": "nx run-many --target=build --all",
    "build:api-gateway": "nx build api-gateway",
    "build:auth-service": "nx build auth-service",
    "build:prod": "nx run-many --target=build --all --configuration=production",
    "serve": "nx run-many --target=serve --all",
    "serve:api-gateway": "nx serve api-gateway",
    "serve:auth-service": "nx serve auth-service",
    "dev": "nx run-many --target=serve --all --parallel",
    "test": "nx run-many --target=test --all",
    "test:api-gateway": "nx test api-gateway",
    "test:auth-service": "nx test auth-service",
    "test:e2e": "nx run-many --target=e2e --all",
    "test:watch": "nx run-many --target=test --all --watch",
    "lint": "nx run-many --target=lint --all",
    "lint:fix": "nx run-many --target=lint --all --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "nx reset && rm -rf dist node_modules",
    "graph": "nx graph",
    "affected:build": "nx affected --target=build",
    "affected:test": "nx affected --target=test",
    "affected:lint": "nx affected --target=lint",
    "affected:e2e": "nx affected --target=e2e",
    "generate:proto": "protoc --plugin=./node_modules/.bin/protoc-gen-ts_proto --ts_proto_out=./libs/common/src/types/ ./proto/*.proto --ts_proto_opt=nestJs=true"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.13.4",
    "@grpc/proto-loader": "^0.7.15",
    "@nestjs/common": "^10.0.2",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^10.0.2",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/microservices": "^11.1.3",
    "@nestjs/mongoose": "^11.0.3",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^10.0.2",
    "axios": "^1.6.0",
    "bcrypt": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "cookie-parser": "^1.4.7",
    "mongoose": "^8.15.1",
    "nestjs-pino": "^4.4.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.0",
    "ts-proto": "^2.7.3",
    "uuid": "^11.1.0"
  },
  "_moduleAliases": {
    "@eshop/common": "dist/libs/common/main",
    "@eshop/grpc": "dist/libs/grpc/main"
  },
  "devDependencies": {
    "@eslint/js": "^9.8.0",
    "@nestjs/schematics": "^10.0.1",
    "@nestjs/testing": "^10.0.2",
    "@nx/eslint": "21.1.3",
    "@nx/eslint-plugin": "21.1.3",
    "@nx/jest": "21.1.3",
    "@nx/js": "21.1.3",
    "@nx/nest": "21.1.3",
    "@nx/node": "21.1.3",
    "@nx/web": "21.1.3",
    "@nx/webpack": "21.1.3",
    "@nx/workspace": "21.1.3",
    "@swc-node/register": "~1.9.1",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.9",
    "@types/jest": "^29.5.12",
    "@types/node": "~18.16.9",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^10.0.0",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "jsonc-eslint-parser": "^2.1.0",
    "nx": "21.1.3",
    "prettier": "^2.6.2",
    "ts-jest": "^29.1.0",
    "ts-node": "10.9.1",
    "tslib": "^2.3.0",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.19.0",
    "webpack-cli": "^5.1.4"
  }
}
